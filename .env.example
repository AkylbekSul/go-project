# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=postgres

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_secure_password_here

# Database URLs
# IMPORTANT: If you change POSTGRES_PASSWORD, you MUST set these DATABASE_URL_* variables
# with the correct password, otherwise services will fail to connect.
# Format: postgres://USER:PASSWORD@HOST:PORT/DATABASE?sslmode=disable
DATABASE_URL_API_GATEWAY=postgres://postgres:your_secure_password_here@postgres:5432/api_gateway_db?sslmode=disable
DATABASE_URL_PAYMENT_ORCHESTRATOR=postgres://postgres:your_secure_password_here@postgres:5432/payment_orchestrator_db?sslmode=disable
DATABASE_URL_FRAUD_SERVICE=postgres://postgres:your_secure_password_here@postgres:5432/fraud_service_db?sslmode=disable
DATABASE_URL_LEDGER_SERVICE=postgres://postgres:your_secure_password_here@postgres:5432/ledger_service_db?sslmode=disable

# Redis Configuration
REDIS_URL=redis:6379

# Kafka Configuration
KAFKA_BROKERS=kafka:29092

# NATS Configuration
NATS_URL=nats://nats:4222

# Jaeger Configuration
JAEGER_ENDPOINT=jaeger:4318

# Service Ports
PORT_API_GATEWAY=8081
PORT_PAYMENT_ORCHESTRATOR=8082
PORT_FRAUD_SERVICE=8083
PORT_LEDGER_SERVICE=8084
